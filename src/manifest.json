{
	"manifest_version": 2,
	"name": "Protonfox",
	"version": "{{ version }}",
	"description": "{{ description }}",
	"content_scripts": [
		{
			"matches": [
				"*://store.steampowered.com/app/*"
			],
			"js": [
				"steam.js"
			]
		}
	],
	"permissions": [
		"*://*.protondb.com/api/v1/*",
		"tabs"
	]
}
