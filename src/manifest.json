{
	"manifest_version": 2,
	"name": "Protonfox",
	"version": "{{ version }}",
	"description": "{{ description }}",
	"content_scripts": [
		{
			"matches": [
				"*://store.steampowered.com/*"
			],
			"js": [
				"steam.js"
			]
		}
	],
	"icons": {
		"48": "assets/icon-48.png"
	},
	"permissions": [
		"*://*.protondb.com/api/v1/*"
	]
}
